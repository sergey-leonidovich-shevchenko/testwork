USER_ID=$(shell id -u)

DC = @USER_ID=$(USER_ID) docker compose
DC_RUN = ${DC} run --rm php
DC_EXEC = ${DC} exec php

PHONY: help
.DEFAULT_GOAL := help

help: ## â”  This help.
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

setup: down init build install up migrate success-message console ## âš™ï¸ Setup application.

init:  ## ğŸ”¢ Initialize environment and other .dist files.
	@for file in .env .env.test docker-compose.yml .phpunit.xml .php-cs-fixer.php .phpstan.neon; do \
		if [ ! -f $$file ]; then \
			echo "Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ» $$file Ğ¸Ğ· $$file.dist" && cp $$file.dist $$file; \
		else \
			echo "Ğ¤Ğ°Ğ¹Ğ» $$file ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½"; \
		fi; \
	done

build: ## ğŸ”§ Build services.
	${DC} build $(c)

up: ## â¬†ï¸ Create and start services.
	${DC} up -d $(c)

stop: ## â›”  Stop services.
	${DC} stop $(c)

start: ## â–¶  Start services.
	${DC} start $(c)

down: ## â¬‡ï¸ Stop and remove containers and volumes.
	${DC} down -v $(c)

restart: stop start ## ğŸ”ƒ Restart services.

console: ## ğŸ‘¤ Login in console.
	${DC_EXEC} /bin/bash

install: ## ğŸŒŸ Install dependencies without running the whole application.
	${DC_RUN} composer install

migrate: ## ğŸ“ Run migration.
	@echo "ğŸ“ Run migration..."
	sleep 3
	${DC_RUN} bin/console doctrine:migration:migrate -n

run-tests: ## ğŸ“Ÿ Run tests.
	@echo "ğŸ“Ÿ Run tests..."
	${DC_RUN} php vendor/bin/phpunit -c .phpunit.xml

phpstan: ## ğŸ“Š Run phpstan analysis
	${DC_RUN} php vendor/bin/phpstan analyse -c .phpstan.neon

success-message:
	@echo "ğŸš€ Project installed successfully!"
	@echo "You can now access the application at http://localhost:8337"

cs-fix:
	${DC_RUN} vendor/bin/php-cs-fixer fix
