USER_ID=$(shell id -u)

DC = @USER_ID=$(USER_ID) docker compose
DC_RUN = ${DC} run --rm php
DC_EXEC = ${DC} exec php

PHONY: help
.DEFAULT_GOAL := help

help: ## â”  This help.
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

setup: down build init install up migrate fixtures tests success-message console ## âš™ï¸ Setup application.

init:  ## ğŸ”¢ Initialize environment and other .dist files.
	@if [ ! -f .env ]; then (echo "Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ» .env Ğ¸Ğ· .env.dist" && cp .env.dist .env); else (echo "Ğ¤Ğ°Ğ¹Ğ» .env ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½"); fi
	@if [ ! -f .env.test ]; then (echo "Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ» .env.test Ğ¸Ğ· .env.test.dist" && cp .env.test.dist .env.test); else (echo "Ğ¤Ğ°Ğ¹Ğ» .env.test ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½"); fi
	@if [ ! -f docker-compose.yml ]; then (echo "Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ» docker-compose.yml Ğ¸Ğ· docker-compose.yml.dist" && cp docker-compose.yml.dist docker-compose.yml); else (echo "Ğ¤Ğ°Ğ¹Ğ» docker-compose.yml ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½"); fi
	@if [ ! -f phpunit.xml ]; then (echo "Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ñ„Ğ°Ğ¹Ğ» phpunit.xml Ğ¸Ğ· phpunit.xml.dist" && cp phpunit.xml.dist phpunit.xml); else (echo "Ğ¤Ğ°Ğ¹Ğ» phpunit.xml ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½"); fi

build: ## ğŸ”§ Build services.
	${DC} build $(c)

up: ## â¬†ï¸ Create and start services.
	${DC} up -d $(c)

stop: ## â›”  Stop services.
	${DC} stop $(c)

start: ## â–¶  Start services.
	${DC} start $(c)

down: ## â¬‡ï¸ Stop and remove containers and volumes.
	${DC} down -v $(c)

restart: stop start ## ğŸ”ƒ Restart services.

console: ## ğŸ‘¤ Login in console.
	${DC_EXEC} /bin/bash

install: ## ğŸŒŸ Install dependencies without running the whole application.
	${DC_RUN} composer install

migrate: ## ğŸ“ Run migration.
	@echo "ğŸ“ Run migration..."
	sleep 3
	${DC_RUN} bin/console doctrine:migration:migrate -n

fixtures: ## ğŸ“„ Create fixtures.
	@echo "ğŸ“„ Create fixtures..."
	${DC_RUN} bin/console doctrine:fixtures:load -n

tests: ## ğŸ“Ÿ Run tests.
	@echo "ğŸ“Ÿ Run tests..."
	${DC_RUN} php vendor/bin/phpunit

success-message:
	@echo "ğŸš€ Project installed successfully!"
	@echo "You can now access the application at http://localhost:8337"
